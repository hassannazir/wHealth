@model IEnumerable<wHealth.Clinic>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.message != null)
{
    <h1 id="mess">@ViewBag.message</h1>

}
else 
{
        <h1 id="mess">hello @ViewBag.message1</h1>
}

<table class="table table-bordered table-hover content-wrapper table-striped table-responsive-sm" id="dataTable">
    <thead class="bg-gradient-info text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    <p>@item.Id</p>
                    <a class="fa fa-pencil" asp-action="Edit" asp-route-id="@item.Id">Edit Clinic's Status</a>
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {

           
            $("#mess").fadeOut(5000);

            $("#dataTable").DataTable();


        });
    </script>

}